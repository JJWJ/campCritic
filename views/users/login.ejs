<% layout('layouts/boilerplate')%>

    <div class="container d-flex justify-content-center align-items-center my-5">
        <div class="row">
            <div class="col-md-6 w-100 offset-md-3">
                <div class="card ">
                    <img src="images/timothy-meinberg-xqV9QdGOSas-unsplash-200x-200y.jpg" alt="A campfire at early dawn"
                        class="card-img-top " />
                    <div class="card-body">
                        <p class="card-title text-center" style="font-size: 18px;" data-test-id="login-p">Login</p>
                        <form action="/login" method="POST" class="check-validation" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username"
                                    placeholder="Username" autofocus required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password"
                                    placeholder="Password" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="d-grid gap-2">
                                <button class="btn btn-success ">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>