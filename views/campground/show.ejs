<% layout('layouts/boilerplate.ejs') %>
    <h1>
        <%= camp.title %>
    </h1>
    <h2>
        <%= camp.location %>
    </h2>
    <img src="<%= camp.image %>" alt="campground in <%= camp.location %>">
    <p>
        <%= camp.description %>
    </p>
    <p>
        $<%= camp.price %> Per Night.
    </p>
    <a href="/campground/<%= camp._id%>/edit ">Edit Campground</a>
    <form action="/campground/<%= camp._id%>?_method=DELETE" method="post">
        <button>Delete Campground</button>
    </form>
    <footer>
        <a href="/campground">Back To All Campgrounds</a>
    </footer>