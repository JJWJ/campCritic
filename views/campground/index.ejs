<% layout('layouts/boilerplate.ejs') %>
    <div id="cluster-map"></div>
    <h1 class="text-center">All Campgrounds</h1>
    <% for (let camp of camps) { %>
        <div class="card mb-3 bg-light" style="object-fit: cover;">
            <div class="row">
                <div class="col-md-4 ">
                    <img class="card-img-top" src="<%= camp.images[0].url %>" alt="campground <%= camp.title %>"
                        srcset="">
                    <div class="card-body">
                        <h5 class="card-title text-center">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location %>
                            </small>
                        </p>
                        <div class="d-grid">
                            <a href="/campground/<%= camp._id %>" class="btn btn-primary">View <%= camp.title %> </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

            <script>
                const mapBoxToken = '<%- process.env.MAPBOX_TOKEN%>';
                const campgrounds = { features: <%-JSON.stringify(camps) %>}
            </script>

            <script src="/scripts/clusterMap.js"></script>