<% layout('layouts/boilerplate.ejs') %>
    <div id="cluster-map"></div>
    <h1 class="text-center">All Campgrounds</h1>
    <% for (let camp of campsToRender) { %>
        <div class="card mb-3 bg-light" style="object-fit: cover;">
            <div class="row">
                <div class="col-md-4 ">
                    <img class="card-img-top" src="<%= camp.images[0].url %>" alt="campground <%= camp.title %>"
                        srcset="">
                    <div class="card-body">
                        <h5 class="card-title text-center">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location %>
                            </small>
                        </p>
                        <div class="d-grid">
                            <a href="/campground/<%= camp._id %>" class="btn btn-primary">View <%= camp.title %> </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
            <nav class="col-md-4 offset-4" aria-label="Page navigation ">
                <ul class="pagination">
                    <li class="page-item <% if (parseInt(page) - 1 <= 0) { %>
                    disabled 
                    <% } %>"><a class="page-link" href="/campground?page=<%= parseInt(page) - 1 %>">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="/campground?page=<%= parseInt(page) %>">
                            <%= parseInt(page) %>
                        </a></li>
                    <li class="page-item <% if (last) { %>
                    disabled 
                    <% } %>"><a class="page-link"
                            href="/campground?page=<%= Math.floor(parseInt(page, 10) + 1) %>">Next</a></li>
                </ul>
            </nav>
            <script>
                const mapBoxToken = '<%- process.env.MAPBOX_TOKEN%>';
                const campgrounds = { features: <%-JSON.stringify(camps) %>}
            </script>

            <script src="/scripts/clusterMap.js"></script>